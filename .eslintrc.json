{
  "rules": {
    "no-unused-vars": "off",
    "import/no-extraneous-dependencies": ["off", { "devDependencies": false }]
  },
  "ignorePatterns": ["dist", "node_modules", "webpack.*", "config/paths.js"],
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "prettier"],  
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "config/webpack.common.js"
      }
    }
  }
}
